Package: nascaR.data
Title: NASCAR Race Data
Version: 1.0.0
Authors@R: 
    person(
        given = "Kyle", 
        family = "Grealis", 
        email = "kylegrealis@icloud.com", 
        role = c("aut", "cre"),
        comment = c(ORCID = "0000-0002-9223-8854")
